#preview
  width 467px
  display none
  position fixed
  top 0
  right -20px
  text-align center
  z-index 150

  .theme
    display none
    &.active
      display block

a.spawn-demo
  padding 10px 15px !important

div.demo-links
  margin 30px 0
  &:not(.demo-always-visible)
    display none

#apple-preview, #android-preview
  width 467px
  height 800px
  background center top no-repeat url("/images/devices-sprite.jpg")
  background-size 467px
  margin 5px auto 0
  a
    color #eee // @stylint ignore
    background-color transparent
    box-shadow none
    font-size .8rem
    padding 5px
    border-radius 5px
    transition .2s color, .2s background-color
    &:hover
      background-color #555 // @stylint ignore
    i
      font-size 170%

#apple-preview
  iframe
    margin-top 80px
    width 320px
    height 568px
    background white
  a
    position absolute
    top 100px
  a.view-source
    left 90px
  a.desktop-launcher
    right 90px

#android-preview
  background-position center center
  iframe
    margin-top 64px
    width 360px
    height 590px
    background white
  a
    position absolute
    top 90px
    width 80px
  a.view-source
    left 115px
  a.desktop-launcher
    right 115px

#preview-chooser
  height $header-height

  display -webkit-flex
  display -ms-flexbox
  display flex
  -webkit-flex-direction row
  -ms-flex-direction row
  flex-direction row
  -webkit-align-items center
  -ms-flex-align center
  -ms-grid-row-align center // @stylint ignore
  align-items center
  -webkit-justify-content center
  -ms-flex-pack center
  justify-content center

  a
    display inline-block
    color $header-color
    margin-left 3px
    margin-right 3px
    border-radius 5px
    padding 10px 16px
    transition .2s color, .2s background-color
    i
      font-size 125%

    &.active, &:hover
      color $header-bg
      background-color $white

@media screen and (max-width 1099px)
  #preview
    display none !important
  div.demo-links
    display block

@media screen and (min-width 1100px)
  #main .content.with-previewer
    margin-right 440px
  #preview
    display block
